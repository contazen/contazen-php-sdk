{
    "name": "contazen/php-sdk",
    "description": "Official PHP SDK for Contazen API - Romanian invoicing and accounting platform",
    "keywords": [
        "contazen",
        "invoice",
        "billing",
        "accounting",
        "romania",
        "efactura",
        "anaf",
        "api",
        "sdk",
        "php"
    ],
    "homepage": "https://github.com/contazen/contazen-php-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Contazen Development Team",
            "email": "dev@contazen.ro"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.4",
        "psr/log": "^1.1 || ^2.0 || ^3.0",
        "psr/http-message": "^1.0",
        "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
        "nesbot/carbon": "^2.0",
        "moneyphp/money": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "fakerphp/faker": "^1.20",
        "symfony/var-dumper": "^5.0 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "Contazen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contazen\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=7",
        "cs": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "check": [
            "@cs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}